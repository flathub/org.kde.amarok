{
    "app-id": "org.kde.amarok",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.8",
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "24.08",
            "add-ld-path": ".",
            "no-autodownload": true,
            "autodelete": false
        }
    },
    "sdk": "org.kde.Sdk",
    "command": "amarok",
    "rename-icon": "amarok",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=home",
        "--filesystem=/run/media",
        "--filesystem=/media",
        "--system-talk-name=org.freedesktop.UDisks2",
        "--talk-name=org.kde.kglobalaccel",
        "--talk-name=org.kde.kcookiejar5",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--own-name=org.mpris.MediaPlayer2.amarok"
    ],
    "cleanup-commands": [
        "/app/cleanup-BaseApp.sh"
    ],
    "cleanup": [
        "/include"
    ],
    "modules": [
        {
            "name": "fmt",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DFMT_DOC=OFF",
                "-DFMT_TEST=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/fmtlib/fmt/archive/refs/tags/9.1.0.zip",
                    "sha256": "cdc885473510ae0ea909b5589367f8da784df8b00325c55c7cbbab3058424120"
                }
            ]
        },
        {
            "name": "mariadb",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DWITH_EMBEDDED_SERVER=ON",
                "-DDEFAULT_CHARSET=utf8mb4",
                "-DDEFAULT_COLLATION=utf8mb4_unicode_ci",
                "-DPLUGIN_EXAMPLE=NO",
                "-DPLUGIN_FEDERATED=NO",
                "-DPLUGIN_FEEDBACK=NO",
                "-DWITH_EXTRA_CHARSETS=complex",
                "-DWITH_JEMALLOC=ON",
                "-DWITH_PCRE2=system",
                "-DWITH_LIBFMT=system",
                "-DWITH_SSL=system",
                "-DWITH_SYSTEMD=no",
                "-DWITH_UNIT_TESTS=OFF",
                "-DWITH_ZLIB=system",
                "-DWITHOUT_ARCHIVE_STORAGE_ENGINE=1",
                "-DWITHOUT_BLACKHOLE_STORAGE_ENGINE=1",
                "-DWITHOUT_PARTITION_STORAGE_ENGINE=1",
                "-DWITHOUT_TOKUDB=1",
                "-DWITHOUT_EXAMPLE_STORAGE_ENGINE=1",
                "-DWITHOUT_FEDERATED_STORAGE_ENGINE=1",
                "-DWITHOUT_PBXT_STORAGE_ENGINE=1"
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "/man",
                "*.a"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://archive.mariadb.org/mariadb-11.4.5/source/mariadb-11.4.5.tar.gz",
                    "sha256": "ff6595f8c482f9921e39b97fa1122377a69f0dcbd92553c6b9032cbf0e9b5354",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1887,
                        "stable-only": true,
                        "url-template": "https://archive.mariadb.org/mariadb-$version/source/mariadb-$version.tar.gz",
                        "versions": {
                            "<": "11.5"
                        }
                    }
                }
            ]
        },
        {
            "name": "libmygpo-qt6",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DMYGPO_BUILD_TESTS=OFF",
                "-DBUILD_WITH_QT6=ON"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Mazhoon/libmygpo-qt.git",
                    "commit": "4dfa3ba1f075ca9c9dbd5b452f88ba75f6f13c31"
                }
            ]
        },
        {
            "name": "liblastfm-qt6",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTS=OFF",
                "-DCMAKE_CXX_STANDARD=14"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Mazhoon/liblastfm.git",
                    "commit": "81e8f9dc16a0a18fe9a066d51c2071086326670b"
                }
            ],
            "modules": [
                "shared-modules/linux-audio/fftw3f.json"
            ]
        },
        {
            "name": "libmtp",
            "buildsystem": "autotools",
            "config-opts": [
                "--with-udev=/app/lib/udev"
            ],
            "cleanup": [
                "/share/doc",
                "*.a",
                "*.la"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/libmtp/libmtp-1.1.19.tar.gz",
                    "sha256": "deb4af6f63f5e71215cfa7fb961795262920b4ec6cb4b627f55b30b18aa33228"
                }
            ],
            "modules": [
                "shared-modules/libusb/libusb.json"
            ]
        },
        {
            "name": "amarok",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "install -d ${FLATPAK_DEST}/lib/ffmpeg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/unstable/amarok/3.2.81/amarok-3.2.81.tar.xz",
                    "sha256": "f0661c58b60faa97425928475347ea9f8e1b20582791687ee228d74a0573625f",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 13985,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/amarok/$version/amarok-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
